{
    "openapi": "3.0.0",
    "info": {
        "title": "Gestão de Medicamentos",
        "description": "Esta API é responsável pelo gerenciamento de medicamentos de pacientes",
        "version": "10.0.0"
    },
    "paths": {
        "/user": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "Cadastro de usuários",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResponse"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "User"
                ],
                "description": "Detalhes do usuário",
                "security":[
                    {
                        "bearerAuth":[]
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserDetailsResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/session": {
            "post": {
                "tags":[
                    "User"
                ],
                "description": "Autenticação Usuário",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/medications": {
            "get": {
                "tags":[
                    "Medications"
                ],
                "description": "Medicamentos de um usuário",
                "security":[
                    {
                        "bearerAuth":[]
                    }
                ],
                "responses":{
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/MedicationsResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "UserRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome do usuário",
                        "example": "João da Silva"
                    },
                    "email": {
                        "type": "string",
                        "description": "Email do usuário",
                        "example": "joaosilva@hotmail.com"
                    },
                    "phone": {
                        "type": "string",
                        "description": "Telefone do usuário",
                        "example": "11981223344"
                    },
                    "date_of_birth": {
                        "type": "string",
                        "description": "Data de nascimento do usuário",
                        "example": "2000-01-31"
                    },
                    "gender": {
                        "type": "male | female",
                        "description": "Gênero do usuário",
                        "example": "female"
                    },
                    "password": {
                        "type": "string",
                        "description": "Senha do usuário",
                        "example": "senhacomplexa123"
                    }
                },
                "required": [
                    "name",
                    "email",
                    "password"
                ]
            },
            "UserResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Id do usuário cadastrado",
                        "format": "uuid"
                    },
                    "name": {
                        "type": "string",
                        "description": "Nome do usuário cadastrado",
                        "example": "NAME_TEST"
                    },
                    "email": {
                        "type": "string",
                        "description": "Email do usuário cadastrado",
                        "example": "email@email.com"
                    },
                    "phone": {
                        "type": "string",
                        "description": "Telefone do usuário",
                        "example": "11981223344"
                    },
                    "date_of_birth": {
                        "type": "string",
                        "description": "Data de nascimento do usuário",
                        "example": "2000-01-31"
                    },
                    "gender": {
                        "type": "male | female",
                        "description": "Gênero do usuário",
                        "example": "female"
                    }
                }
            },
            "LoginRequest":{
                "type":"object",
                "properties":{
                    "email":{
                        "type":"string",
                        "description":"email de login",
                        "example":"email@email.com"
                    },
                    "password": {
                        "type": "string",
                        "description": "password de login",
                        "example":"password_test"
                    }
                }
            },
            "LoginResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Id do usuário cadastrado",
                        "format": "uuid"
                    },
                    "name": {
                        "type": "string",
                        "description": "Nome do usuário cadastrado",
                        "example": "NAME_TEST"
                    },
                    "email": {
                        "type": "string",
                        "description": "Email do usuário cadastrado",
                        "example": "email@email.com"
                    },
                    "phone": {
                        "type": "string",
                        "description": "Telefone do usuário",
                        "example": "11981223344"
                    },
                    "date_of_birth": {
                        "type": "string",
                        "description": "Data de nascimento do usuário",
                        "example": "2000-01-31"
                    },
                    "gender": {
                        "type": "male | female",
                        "description": "Gênero do usuário",
                        "example": "female"
                    },
                    "token": {
                        "type": "string",
                        "description": "Token",
                        "example": "token gerado"
                    }
                }
            },
            "UserDetailsResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Id do usuário cadastrado",
                        "format": "uuid"
                    },
                    "isAdmin": {
                        "type": "boolean",
                        "description": "Se o usuário é um administrador",
                        "format": "false"
                    },
                    "name": {
                        "type": "string",
                        "description": "Nome do usuário cadastrado",
                        "example": "NAME_TEST"
                    },
                    "email": {
                        "type": "string",
                        "description": "Email do usuário cadastrado",
                        "example": "email@email.com"
                    },
                    "phone": {
                        "type": "string",
                        "description": "Telefone do usuário",
                        "example": "11981223344"
                    },
                    "date_of_birth": {
                        "type": "string",
                        "description": "Data de nascimento do usuário",
                        "example": "2000-01-31"
                    },
                    "gender": {
                        "type": "male | female",
                        "description": "Gênero do usuário",
                        "example": "female"
                    }
                }
            },
            "MedicationsResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Id do medicamento",
                        "format": "uuid"
                    },
                    "name": {
                        "type": "string",
                        "description": "Nome do medicamento",
                        "example": "NAME_TEST"
                    },
                    "description": {
                        "type": "string",
                        "description": "Descrição do medicamento",
                        "example": "Description..."
                    },
                    "stock": {
                        "type": "number",
                        "description": "Estoque do medicamento",
                        "example": 15
                    },
                    "time_to_take": {
                        "type": "string",
                        "description": "Horários de tomar o medicamento",
                        "example": "12:00,22:00"
                    },
                    "created_at": {
                        "type": "string",
                        "description": "Data de ínicio do tratamento",
                        "example": "2024-04-08T21:20:56.523Z"
                    }
                }
            }
        }, 
        "securitySchemes":{
            "bearerAuth":{
                "description":"Autenticação da API",
                "type":"http",
                "scheme":"bearer",
                "bearerFormat":"JWT",
                "tokenUrl":"http://localhost:3333/session"
            }
        }
    }
}
