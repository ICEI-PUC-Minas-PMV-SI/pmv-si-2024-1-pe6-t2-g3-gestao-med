{
    "openapi": "3.0.0",
    "info": {
        "title": "Gestão de Medicamentos",
        "description": "Esta API é responsável pelo gerenciamento de medicamentos de pacientes",
        "version": "10.0.0"
    },
    "paths": {
        "/user": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "Cadastro de usuários",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResponse"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "User"
                ],
                "description": "Detalhes do usuário",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserDetailsResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/session": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "Autenticação Usuário",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/medication": {
            "post": {
                "tags": [
                    "Medications"
                ],
                "description": "Cadastro de medicamento por usuário autenticado",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RegisterMedicationRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/RegisterMedicationResponse"
                                }
                            }
                        }
                    }
                }
            },
			"get": {
                 "tags": ["Medications"],
                 "description": "Medicamento específico",
                 "security": [
                     {"bearerAuth": []}
                 ],
                 "parameters": [
                    {
                        "in":"query",
                        "name": "medicationId",
                        "schema": {"type": "string"},
                        "description":"Id do medicamento"
                    }
                ],
                 "responses": {
                     "200": {
                         "content": {
                             "application/json": {
                                 "schema": {"$ref": "#/components/schemas/GetSingleMedicationResponse"}
                             }
                         }
                     },
                     "404": {
                         "content": {
                             "text/plain": {
                                 "schema": {"type": "string"}
                             }
                         }
                     },
                     "400": {
                         "content": {
                             "text/plain": {
                                 "schema": {"type": "string"}
                             }
                         }
                     }
                 }
            }
        },
        "/medications": {
            "get": {
                "tags": [
                    "Medications"
                ],
                "description": "Medicamentos de um usuário",
				"security": [
                    {
                        "bearerAuth": []
                    }
                ],
				"responses": {
                    "200": {
                        "content": {
