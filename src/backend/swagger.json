                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/EditMedicationRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/EditMedicationResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/medication/taken": {
            "post": {
                "tags": [
                    "Registers"
                ],
                "description": "Cadastro horário que medicamento foi tomado",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/MedicationTakenRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/MedicationTakenResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/medication/delete":{
            "patch":{
                "tags": [
                    "Medications"
                ],
                "description": "Cadastro horário que medicamento foi tomado",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters":[
                    {
                        "name":"medicationId",
                        "in":"path",
                        "description":"Id do medicamento a ser deletado",
                        "required":true,
                        "schema":{
                            "type":"string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Medicamento deletado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "example": "Medicamento deletado com sucesso"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/registers/report": {
            "get": {
                "tags": [
                    "Registers"
                ],
                "description": "Relatório de registros de medicamentos do usuário",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "startDate",
                        "in": "query",
                        "description": "Data de início do período",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "endDate",
                        "in": "query",
                        "description": "Data de término do período",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ExportRegistersReportResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
        
    },
